{
	"name": "df_patient_fhir_v2",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "ls_adls_raw",
						"type": "LinkedServiceReference"
					},
					"name": "srcPatient"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "ls_adls_development",
						"type": "LinkedServiceReference"
					},
					"name": "sinkDevelopmentDataLake"
				},
				{
					"linkedService": {
						"referenceName": "ls_adls_development",
						"type": "LinkedServiceReference"
					},
					"name": "sinkProject"
				},
				{
					"linkedService": {
						"referenceName": "ls_adls_development",
						"type": "LinkedServiceReference"
					},
					"name": "sinkCountry"
				}
			],
			"transformations": [
				{
					"name": "selectPatientData"
				},
				{
					"name": "flatten1"
				},
				{
					"name": "derivedColumn1"
				},
				{
					"name": "distinctCountry"
				},
				{
					"name": "surrogateKey1"
				},
				{
					"name": "distinctProject"
				},
				{
					"name": "surrogateKey2"
				},
				{
					"name": "lookupCountry"
				},
				{
					"name": "lookupProject"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"parameters{",
				"     date as integer",
				"}",
				"source(output(",
				"          active as boolean,",
				"          address as (country as string, district as string, state as string)[],",
				"          birthDate as short,",
				"          communication as (language as (text as string), preferred as boolean)[],",
				"          gender as string,",
				"          id as short,",
				"          identifier as (system as string, use as string, value as string)[],",
				"          maritalStatus as (coding as (code as string)[]),",
				"          meta as (lastUpdated as string, profile as string[], source as string, versionId as short),",
				"          resourceType as string,",
				"          telecom as (system as string, use as string, value as string)[],",
				"          text as (div as string, status as string)",
				"     ),",
				"     useSchema: false,",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'json',",
				"     fileSystem: 'fhir',",
				"     documentForm: 'arrayOfDocuments',",
				"     wildcardPaths:[(concat('fhir.ken.psi-connect.org/Patient/',toString($date),'*.json'))]) ~> srcPatient",
				"srcPatient select(mapColumn(",
				"          birthDate,",
				"          gender,",
				"          id,",
				"          lastUpdated = meta.lastUpdated,",
				"          identifierSystem = identifier[1].system,",
				"          identifierUse = identifier[1].use,",
				"          identifierValue = identifier[1].value,",
				"          telecomSystem = telecom[1].system,",
				"          telecomUse = telecom[1].use,",
				"          telecomValue = telecom[1].value,",
				"          profile = meta.profile",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectPatientData",
				"selectPatientData foldDown(unroll(profile, profile),",
				"     mapColumn(",
				"          birthDate,",
				"          gender,",
				"          id,",
				"          lastUpdated,",
				"          identifierSystem,",
				"          identifierUse,",
				"          identifierValue,",
				"          telecomSystem,",
				"          telecomUse,",
				"          telecomValue,",
				"          profile",
				"     ),",
				"     skipDuplicateMapInputs: false,",
				"     skipDuplicateMapOutputs: false) ~> flatten1",
				"flatten1 derive(projectCode = regexExtract(profile,'(.+)-(.+)',1),",
				"          countryCode = regexExtract(profile,'(.+)-(.+)',2)) ~> derivedColumn1",
				"derivedColumn1 aggregate(groupBy(countryCode),",
				"     count = count('1')) ~> distinctCountry",
				"distinctCountry keyGenerate(output(idCountry as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey1",
				"derivedColumn1 aggregate(groupBy(projectCode),",
				"     count = count('1')) ~> distinctProject",
				"distinctProject keyGenerate(output(idProject as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> surrogateKey2",
				"derivedColumn1, surrogateKey1 lookup(derivedColumn1@countryCode == distinctCountry@countryCode,",
				"     multiple: false,",
				"     pickup: 'any',",
				"     broadcast: 'auto')~> lookupCountry",
				"lookupCountry, surrogateKey2 lookup(derivedColumn1@projectCode == distinctProject@projectCode,",
				"     multiple: false,",
				"     pickup: 'any',",
				"     broadcast: 'auto')~> lookupProject",
				"lookupProject select(mapColumn(",
				"          birthDate,",
				"          gender,",
				"          id,",
				"          lastUpdated,",
				"          identifierSystem,",
				"          identifierUse,",
				"          identifierValue,",
				"          telecomSystem,",
				"          telecomUse,",
				"          telecomValue,",
				"          idCountry,",
				"          idProject",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delimited',",
				"     fileSystem: 'fhir',",
				"     folderPath: (concat('fhir.psi-mis.org/Patient/',toString($date))),",
				"     truncate: true,",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sinkDevelopmentDataLake",
				"surrogateKey2 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delimited',",
				"     fileSystem: 'fhir',",
				"     folderPath: 'concat(\\'fhir.psi-mis.org/Project/\\',toString($date))',",
				"     truncate: true,",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          projectCode,",
				"          idProject",
				"     )) ~> sinkProject",
				"surrogateKey1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delimited',",
				"     fileSystem: 'fhir',",
				"     folderPath: 'concat(\\'fhir.psi-mis.org/Country/\\',toString($date))',",
				"     truncate: true,",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          countryCode,",
				"          idCountry",
				"     )) ~> sinkCountry"
			]
		}
	}
}